<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.beMentor">


    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:fontFamily="@font/manrope_extra_bold"
        >

    </TextView>

    <TextView
        android:id="@+id/text_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/text_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="headline"
        android:fontFamily="@font/manrope_extra_bold"
        >

    </TextView>

    <TextView
        android:id="@+id/text_field_of_mentoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/text_headline"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Fields of Mentoring :"
        android:fontFamily="@font/manrope_extra_bold"
        >
    </TextView>

        <RelativeLayout
            android:id="@+id/rl_field1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/text_field_of_mentoring"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/edit_field1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_marginHorizontal="20dp"
                android:textSize="15dp"
                android:textColorHint="@color/white"
                android:fontFamily="@font/manrope_medium"
                android:background="@color/transparent"
                android:hint="Ex. Engineering">

            </EditText>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_field2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/round_corners"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/rl_field1"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/edit_field2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="15dp"
            android:textColorHint="@color/white"
            android:fontFamily="@font/manrope_medium"
            android:background="@color/transparent"
            android:hint="Ex. Android Development(optional)">

        </EditText>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_field3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/round_corners"
        android:layout_marginLeft="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/rl_field2"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/edit_field3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="15dp"
            android:textColorHint="@color/white"
            android:fontFamily="@font/manrope_medium"
            android:background="@color/transparent"
            android:hint="Ex. Machine Learning(optional)">

        </EditText>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/rl_field3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="About :"
        android:fontFamily="@font/manrope_extra_bold"
        >
    </TextView>

    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/headline"
        android:layout_marginLeft="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/text_about"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/edit_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/white"
            android:fontFamily="@font/manrope_medium"
            android:background="@color/transparent"
            android:hint="About(max 60 words)...">

        </EditText>

    </RelativeLayout>


        <Button
            android:id="@+id/button_save_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/otp_box"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginVertical="20dp"
            android:text="Save"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="15dp">

        </Button>

    </RelativeLayout>