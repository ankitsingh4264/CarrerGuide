<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pr_profile_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/pr_edt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_toRightOf="@+id/pr_profile_img"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        ></TextView>
    <TextView
        android:id="@+id/pr_edt_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pr_edt_name"
        android:text="headline of the user"
        android:layout_toRightOf="@+id/pr_profile_img"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        ></TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:id="@+id/pr_reject"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="2dp"
        android:src="@drawable/cross"
        android:layout_below="@id/pr_edt_headline"
        android:layout_alignParentEnd="true"

        ></de.hdodenhof.circleimageview.CircleImageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:id="@+id/pr_accept"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_baseline_check_24"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="2dp"

        android:layout_below="@id/pr_edt_headline"
        android:layout_toLeftOf="@id/pr_reject"

        ></de.hdodenhof.circleimageview.CircleImageView>

</RelativeLayout>