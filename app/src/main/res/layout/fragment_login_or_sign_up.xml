<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginOrSignUp"
    android:background="@drawable/loginorsignup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_less_edge"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/login_"
        android:layout_marginTop="530dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/purple_900"
            android:layout_marginHorizontal="20dp"
            android:textSize="25dp"
            android:text="Login"
            android:fontFamily="@font/manrope_extra_bold"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            >

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/signUp_"
        android:background="@drawable/raound_less_edge_2"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="600dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="25dp"
            android:text="Sign Up"
            android:fontFamily="@font/manrope_extra_bold"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            >

        </TextView>

    </RelativeLayout>

</RelativeLayout>